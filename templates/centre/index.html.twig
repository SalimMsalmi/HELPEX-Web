{% extends 'admin.html.twig' %}

{% block title %}centre index{% endblock %}
{% block component %} <link rel="stylesheet" href="{{ asset("Card/style.css") }}" />  {% endblock %}
{% block body %}

    <div class="org-table-container">
        <div class="org-table-head-container">
            <div class="">
                <h2>les centres</h2>
            </div>
            <div class="add-org-btn-container">
                <a href="{{ path('app_centre_new') }}" class="add-org-btn" data-toggle="modal"><i class="fa-solid fa-plus"></i><span>cree un centre</span></a>

            </div>
        </div>
        <table class="org-table">
            <thead class="org-table-head">
            <tr>
                <th class="org-table-th">Id</th>
                <th class="org-table-th">Nomcentre </th>
                <th class="org-table-th">adresse</th>
                <th class="org-table-th">email</th>
{#                <th class="org-table-th">telephone</th>#}
{#                <th class="org-table-th">site web</th>#}

                <th class="org-table-th">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for centre in centres %}
                <tr>
                    <td  class="org-table-td">{{ centre.id }}</td>
                    <td  class="org-table-td">{{ centre.nomCentre }}</td>
                    <td  class="org-table-td">{{ centre.adresseCentre }}</td>
                    <td  class="org-table-td">{{ centre.emailCentre }}</td>
{#                    <td  class="org-table-td"><p class="org-table-status status-pending">{{ centre.telephoneCentre }}</p></td>#}

{#                    <td  class="org-table-td">{{ centre.siteWebCentre }}</td>#}
                    <td  class="org-table-td">
                        <div class="org-icon-container">
                            <a class="org-action-item" href="{{ path('app_centre_show', {'id': centre.id}) }}"><i class="fa-solid fa-circle-info" style="color: #0035ba"></i></a>
                            <a class="org-action-item" href="{{ path('app_centre_edit', {'id': centre.id}) }}"><i class="fa-solid fa-pencil"style="color: #FFC107"></i></a>
                            <form class="org-action-item" method="post" action="{{ path('app_centre_delete', {'id': centre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this centre?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ centre.id) }}">
                                <button>
                                    <a href="{{ path('app_centre_delete', {'id': centre.id}) }}"><i class="fa-solid fa-trash-can" style="color: red"></i></a>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>



{% endblock %}
{% block ahmed %}
{% endblock %}