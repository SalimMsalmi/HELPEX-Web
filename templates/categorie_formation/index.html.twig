{% extends 'admin.html.twig' %}

{% block title %}categorie_formation index{% endblock %}
{% block component %} <link rel="stylesheet" href="{{ asset("Card/style.css") }}" />  {% endblock %}

{% block body %}

    <div class="org-table-container">
        <div class="org-table-head-container">
            <div class="">
                <h2>les categorie_formations</h2>
            </div>
            <div class="add-org-btn-container">
                <a href="{{ path('app_categorie_formation_new') }}" class="add-org-btn" data-toggle="modal"><i class="fa-solid fa-plus"></i><span>cree categorie_formation</span></a>

            </div>
        </div>
        <table class="org-table">
            <thead class="org-table-head">
            <tr>
                <th class="org-table-th">Id</th>
                <th class="org-table-th">NomCategorieFormation</th>
                <th class="org-table-th">DescriptionCategorieFormation</th>
                <th class="org-table-th">actions</th>
            </tr>
            </thead>
            <tbody>
            {% for categorie_formation in categorie_formations %}
                <tr>
                    <td class="org-table-th">{{ categorie_formation.id }}</td>
                    <td class="org-table-th">{{ categorie_formation.nomCategorieFormation }}</td>
                    <td class="org-table-th">{{ categorie_formation.descriptionCategorieFormation | striptags | slice(0, 60) }}...</td>
                    <td  class="org-table-td">
                        <div class="org-icon-container">
                            <a class="org-action-item" href="{{ path('app_categorie_formation_show', {'id': categorie_formation.id}) }}"><i class="fa-solid fa-circle-info" style="color: #0035ba"></i></a>
                            <a class="org-action-item" href="{{ path('app_categorie_formation_edit', {'id': categorie_formation.id}) }}"><i class="fa-solid fa-pencil"style="color: #FFC107"></i></a>
                            <form class="org-action-item" method="post" action="{{ path('app_categorie_formation_delete', {'id': categorie_formation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this categorie_formation?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie_formation.id) }}">
                                <button>
                                    <a href="{{ path('app_categorie_formation_delete', {'id': categorie_formation.id}) }}"><i class="fa-solid fa-trash-can" style="color: red"></i></a>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>



{% endblock %}