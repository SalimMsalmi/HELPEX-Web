{% extends 'base.html.twig' %}
{%  block body %}
    <section class="services-layout1 pt-130">
    <div class="bg-img"><img src="{{asset("tasks/2.jpg") }}" alt="background"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-6 offset-lg-3">
                <div class="heading text-center mb-60">

                    <h2 class="heading__subtitle">Les meilleurs soins médicaux et de médecine générale</h2>
                    <h3 class="heading__title">Fournir des soins médicaux aux plus malades de notre communauté.</h3>
                </div><!-- /.heading -->
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
        <div class="row">
            <!-- service item #1 -->
            {% for task in tasks %}
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="service-item">
                    <div class="service__icon">
                        <i class="fas fa-folder"></i>  <div class="member__img">
                                <div class="member__hover">
                                    <ul class="social-icons list-unstyled mb-0">
                                        <a href="{{ path('app_tasks_edit', {'id': task.id}) }}">  <button class="btn-sm "><i class="fas fa-edit" style="color: #ca0a54"></i></button></a>


                                           <form method="post" action="{{ path('app_tasks_delete', {'id': task.id}) }}" onsubmit="return confirm('est ce que vous étes sure de vouloir supprimer le Task?');">
                                                <input   type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                               <li> <button class=" btn-sm "><i style="color: #ca0a0a" class="fas fa-trash fa-1x"></i></button></li>
                                               </form>



                                    </ul><!-- /.social-icons -->
                                </div><!-- /.member-hover -->
                            </div></i>
                        <i class="icon-head"></i>
                    </div><!-- /.service__icon -->
                    <div class="service__content">
                        <span class="badge badge-primary">Priorité</span>
                        <h4 class="service__title">Titre : {{ task.titre }}</h4>

                        <ul class="list-items list-items-layout1 list-unstyled">
                            <div class="progress">
                             70%   <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%">70%</div>
                            </div>
                            <i class="fas fa-calendar"></i>   <span style="color: white" >hh</span>{{ task.startDate ? task.startDate|date('Y-m-d') : '' }}
                            <p> <i class="fas fa-calendar"></i>   <span style="color: white" >hh</span>{{ task.endDate ? task.endDate|date('Y-m-d') : '' }}</li></p>
                        </ul>
                        <a href="{{ path('app_task_items', {'id': task.id}) }} " style="text-decoration: none!important; "  class="btn btn__secondary btn__outlined btn__rounded">
                            <span>consulter vos taches</span>
                            <i class="icon-arrow-right"></i>
                        </a>
                    </div><!-- /.service__content -->
                </div><!-- /.service-item -->
            </div><!-- /.col-lg-4 -->
            {% endfor %}
        </div>
    </div>
</section>

{% endblock %}







