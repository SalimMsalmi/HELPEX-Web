{% extends 'base.html.twig' %}


{% block body %}

	<!-- ========================
																																																																																																							       page title 
																																																																																																							    =========================== -->
	<section class="page-title page-title-layout6">
		<div class="bg-img">
			<img src="{{ asset('images/backgrounds/2.jpg') }}" alt="User Image">
		</div>
		<div class="container">
			<div class="row">
				<div class="col-12 d-flex flex-wrap justify-content-end align-items-center">
					{% if is_granted('ROLE_PRO')%}
						<div class="testimonials__rating mr-30">
							<div class="testimonials__rating-inner d-flex align-items-center">
								<span class="total__rate">{{app.user.tarif}}</span>

							</div>
							<!-- /.testimonials__rating-inner -->
						</div>
					{% endif %}
					<!-- /.testimonials__rating -->
					<a href="" class="btn btn__white btn__rounded">Editer mon profile</a>
				</div>
				<!-- /.col-12 -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container -->
	</section>
	<!-- /.page-title -->

	<section class="pt-120 pb-80">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 col-md-12 col-lg-4">
					<aside class="sidebar has-marign-right">
						<div class="widget widget-member shifted-top">
							<div class="member mb-0">
								<div class="member__img">
									{% if app.user.pdp is not null %}
										<img src="{{ asset('uploads/users/' ~ app.user.pdp) }}" alt="User Image">
									{% else %}
										<img src="{{ asset('images/noauth.jpg') }}" alt="User Image">
									{% endif %}
								</div>
								<!-- /.member-img -->
								<div class="member__info">
									<h5 class="member__name">
										<a href="">{{ app.user.Nom }}
											{{ app.user.Prenom }}</a>
									</h5>
									{% if is_granted('ROLE_PRO')%}
										<p class="member__job">{{ app.user.filiere }}</p>
									{% endif %}
									<a href="" class="phone__number">
										<i class="icon-phone"></i>
										<span>{{ app.user.NumTel }}</span>
									</a>

									<div class="mt-20 d-flex flex-wrap justify-content-between align-items-center">
										<ul class="social-icons list-unstyled mb-0">
											<li>
												<a href="#" class="facebook">
													<i class="fab fa-facebook-f"></i>
												</a>
											</li>
											<li>
												<a href="#" class="twitter">
													<i class="fab fa-twitter"></i>
												</a>
											</li>
											<li>
												<a href="#" class="phone">
													<i class="fas fa-phone-alt"></i>
												</a>
											</li>
										</ul>
										<!-- /.social-icons -->
									</div>
								</div>
								<!-- /.member-info -->
							</div>
							<!-- /.member -->
						</div>
						<!-- /.widget-member -->

						<!-- /.widget-help -->

						<div class="widget widget-reports">
							<a href="#" class="btn btn__primary btn__block">
								<i class="icon-eye-file"></i>
								<span>Mes Accompagnements</span>
							</a>
						</div>

						<div class="widget widget-help bg-overlay bg-overlay-primary-gradient">
							<div class="bg-img"><img src={{ asset('images/banners/5.jpg') }} alt="background"></div>
							<div class="widget-content">
								<div class="widget__icon">
									<i class="icon-call3"></i>
								</div>
								<h4 class="widget__title">Emergency Cases</h4>
								<p class="widget__desc">Please feel welcome to contact our friendly reception staff with any general
																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																                    or medical enquiry call us.
								</p>
								<a href="tel:+201061245741" class="phone__number">
									<i class="icon-phone"></i>
									<span>01061245741</span>
								</a>
							</div>
							<!-- /.widget-content -->
						</div>
						<!-- /.widget-help -->


					</aside>
					<!-- /.sidebar -->
				</div>
				<!-- /.col-lg-4 -->
				<div
					class="col-sm-12 col-md-12 col-lg-8">


					<!-- /.col-lg-4 -->


					<section class="contact-layout4 bg-overlay bg-overlay-secondary-gradient pb-50 pb-50">
						<div class="bg-img"><img src="{{ asset('images/page-titles/7.jpg' ) }}" alt="background"></div>
						<div class="contact-panel mb-0">
							{{ form_start(updateForm,{'attr':{'novalidate':'novalidate'}}) }}
							<div class="row">
								<div class="col-sm-12">
									<h4 class="contact-panel__title">Modifier votre profile</h4>
									<p class="contact-panel__desc mb-30">
										modifier vos donn√©es !!!!!!!!!!
									</p>
								</div>
							</div>
							<!-- /.row -->
							<div class="col-sm-6 col-md-6 col-lg-6">
								<div class="form-group">

									{{ form_row(updateForm.Nom, {'attr': {'class': 'form-control'}}) }}

									{{ form_errors(updateForm.Nom) }}
								</div>
							</div>

							<div class="form-group">

								{{ form_row(updateForm.Prenom, {'attr': {'class': 'form-control'}}) }}

								{{ form_errors(updateForm.Prenom) }}
							</div>

							<div class="form-group">

								{{ form_row(updateForm.adresse, {'attr': {'class': 'form-control'}}) }}

								{{ form_errors(updateForm.adresse) }}
							</div>


							<div class="form-group">

								{{ form_row(updateForm.num_tel, {'attr': {'class': 'form-control'}}) }}

								{{ form_errors(updateForm.num_tel) }}
							</div>
							<div class="form-group">

								{{ form_row(updateForm.pic,  {'attr': {'class': 'form-control'}}) }}

							</div>

							<div class="form-group">


								{{ form_row(updateForm.bio, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(updateForm.bio) }}
							</div>
							{% if is_granted('ROLE_PRO')%}
								<div class="form-group">


									{{ form_row(updateForm.tarif, {'attr': {'class': 'form-control'}}) }}
									{{ form_errors(updateForm.tarif) }}
								</div>
							{% endif %}
							<div class="col-12">
								<button class="btn">{{ form_row(updateForm.Update) }}</button>
								<div class="contact-result"></div>
							</div>
							{{ form_end(updateForm) }}


						</div>


					</div>


				</div>


				<!-- /.col-lg-4 -->

				<!-- /.col-lg-12 -->
			</div>
			<!-- /.row -->

		</div>
	</section>
	<!-- /.contact layout 2 -->
</div><!-- /.col-lg-8 --></div><!-- /.row --></div><!-- /.container --></section></section><!-- /.contact layout 2 --></div><!-- /.col-lg-8 --></div><!-- /.row --></div><!-- /.container --></section>{% endblock %}
