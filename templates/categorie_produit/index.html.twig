{% extends 'admin.html.twig' %}

{% block title %}centre index{% endblock %}
{% block component %} <link rel="stylesheet" href="{{ asset("Card/style.css") }}" />  {% endblock %}
{% block body %}

    <div class="org-table-container">
        <div class="org-table-head-container">
            <div class="">
                <h2>Categorie Produit</h2>
            </div>
            <div class="add-org-btn-container">
                <a href="{{ path('app_categorie_produit_new') }}" class="add-org-btn" data-toggle="modal"><i class="fa-solid fa-plus"></i><span>cree une categorie</span></a>

            </div>
        </div>
        <table class="org-table">
            <thead class="org-table-head">
            <tr>
                <th class="org-table-th">Id</th>
                <th class="org-table-th">NomCatProduit </th>


                {#                <th class="org-table-th">telephone</th>#}
                {#                <th class="org-table-th">site web</th>#}

                <th class="org-table-th">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for categorie_produit in categorie_produits %}
                <tr>
                    <td  class="org-table-td">{{ categorie_produit.id }}</td>
                    <td  class="org-table-td">{{ categorie_produit.NomCatProduit }}</td>

                    {#                    <td  class="org-table-td"><p class="org-table-status status-pending">{{ centre.telephoneCentre }}</p></td>#}

                    {#                    <td  class="org-table-td">{{ centre.siteWebCentre }}</td>#}
                    <td  class="org-table-td">
                        <div class="org-icon-container">
                            <a class="org-action-item" href="{{ path('app_categorie_produit_show', {'id': categorie_produit.id}) }}"><i class="fa-solid fa-circle-info" style="color: #0035ba"></i></a>
                            <a class="org-action-item" href="{{ path('app_categorie_produit_edit', {'id': categorie_produit.id})  }}"><i class="fa-solid fa-pencil"style="color: #FFC107"></i></a>
                            <form class="org-action-item" method="post" action="{{ path('app_categorie_produit_delete', {'id': categorie_produit.id}) }}" onsubmit="return confirm('Are you sure you want to delete this centre?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie_produit.id) }}">
                                <button>
                                    <a href="{{path('app_categorie_produit_delete', {'id': categorie_produit.id}) }}"><i class="fa-solid fa-trash-can" style="color: red"></i></a>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>



{% endblock %}